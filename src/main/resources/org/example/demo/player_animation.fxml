        </ImageView>
        <ImageView fx:id="up2" fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../../../sprites/player_up_2.png" />
            </image>
        </ImageView>

        <!-- Down -->
        <ImageView fx:id="down" fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../../../sprites/player_down.png" />
            </image>
        </ImageView>
        <ImageView fx:id="down1" fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../../../sprites/player_down_1.png" />
            </image>
        </ImageView>
        <ImageView fx:id="down2" fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../../../sprites/player_down_2.png" />
            </image>
        </ImageView>

        <!-- Left -->
        <ImageView fx:id="left" fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../../../sprites/player_left.png" />
            </image>
        </ImageView>
        <ImageView fx:id="left1" fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../../../sprites/player_left_1.png" />
            </image>
        </ImageView>
        <ImageView fx:id="left2" fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../../../sprites/player_left_2.png" />
