        </ImageView>
        <ImageView fx:id="right2" fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../../../sprites/player_right_2.png" />
            </image>
        </ImageView>
        <ImageView fx:id="playerImageView" fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../../../sprites/player_down.png" />
            </image>
        </ImageView>
    </children>
</AnchorPane>
