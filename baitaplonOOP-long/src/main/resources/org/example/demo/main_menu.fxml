<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.StackPane?>
<StackPane xmlns="http://javafx.com/javafx/17.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.demo.MenuControler">
    <VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: black;">
        <padding>
            <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
        </padding>
        <ImageView preserveRatio="true" fitWidth="300.0">
            <image>
                <Image url="../../../sprites/bomberman_logo.jpg" />
            </image>
        </ImageView>
        <VBox alignment="CENTER" spacing="10.0">
            <Button text="Start Game" onAction="#startGame" style="-fx-font-size: 20; -fx-padding: 10 20; -fx-background-color: #4CAF50; -fx-text-fill: white;">
                <font>
                    <Font name="Arial Bold" size="20.0" />
                </font>
            </Button>
            <Button text="Exit" onAction="#exitGame" style="-fx-font-size: 20; -fx-padding: 10 20; -fx-background-color: #f44336; -fx-text-fill: white;">
                <font>
                    <Font name="Arial Bold" size="20.0" />
                </font>
            </Button>
        </VBox>
    </VBox>
</StackPane>